<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutScrambleRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.elitetek.scrambleme.ScrambleFragment" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="20"
	    android:orientation="vertical"
        android:id="@+id/linearLayoutScramHolder">
        
	    <ImageView
	        android:id="@+id/imageViewPic"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="3dp"
	        android:layout_weight="20"
	        android:background="@drawable/gradient_image_background"
	        android:padding="5dp"
	        android:src="@drawable/ic_launcher" />
	    
	</LinearLayout>

    <Button
        android:id="@+id/buttonScramble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/gradient_button"
        android:text="@string/button_scramble"
        android:textColor="@android:color/black"
        android:textSize="@dimen/button_text_size"
        android:layout_marginBottom="2.5dp" />

    <Button
        android:id="@+id/buttonDescramble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/gradient_button"
        android:text="@string/button_descramble"
        android:textColor="@android:color/black"
        android:textSize="@dimen/button_text_size"
        android:layout_marginTop="2.5dp" />

</LinearLayout>
